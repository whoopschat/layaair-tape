{
  "compilerOptions": {
    "outDir": "bin/js/",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ],
    "sourceMap": false,
    "allowJs": true
  },
  "include": [
    "libs/**/*.d.ts",
    "node_modules/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts"
  ]
}
